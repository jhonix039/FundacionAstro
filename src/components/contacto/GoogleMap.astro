---
interface Props {
  embedUrl: string;
  width?: string;
  height?: string;
  title?: string;
}

const { 
  embedUrl, 
  width = "100%", 
  height = "400", 
  title = "Mapa de ubicaci√≥n" 
} = Astro.props;
---

<div class="map-container">
  <iframe 
    src={embedUrl}
    width={width} 
    height={height} 
    style="border:0;border-radius:8px;" 
    allowfullscreen="" 
    loading="lazy" 
    referrerpolicy="no-referrer-when-downgrade"
    title={title}>
  </iframe>
</div>

<style>
  .map-container {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border-radius: 8px;
    overflow: hidden;
    margin: 1rem 0;
  }
  
  .map-container iframe {
    display: block;
  }
</style>
